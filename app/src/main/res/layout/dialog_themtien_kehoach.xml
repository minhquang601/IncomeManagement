<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <com.aldoapps.autoformatedittext.AutoFormatEditText
        android:id="@+id/edtTienThem_kehoach"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Số tiền đã sử dụng cho kế hoạch này"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
         />

    <Button
        android:id="@+id/btnThemTien_kehoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:layout_below="@id/spinnerThemTien"
        android:layout_marginTop="27dp"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/btnThoatTien_kehoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerThemTien"
        android:layout_marginTop="27dp"
        android:text="Thoát"
        />

    <Spinner
        android:id="@+id/spinnerThemTien"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
      />
</RelativeLayout>