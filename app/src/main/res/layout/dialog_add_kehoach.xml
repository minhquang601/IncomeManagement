<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Spinner
        android:id="@+id/spinner_dialog_kehoach"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp" />

    <EditText
        android:id="@+id/edtGhichu_Kehoach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_dialog_kehoach"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Ghi chú"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnThem_Dialog_Kehoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edtGhichu_Kehoach"
        android:layout_marginTop="23dp"
        android:text="Thêm" />

    <Button
        android:id="@+id/btnThoat_Dialog_Kehoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnThem_Dialog_Kehoach"
        android:text="Thoát" />

</RelativeLayout>